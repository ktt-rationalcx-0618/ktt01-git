{
	"name": "ParameterTrigger Copy Input to Output",
	"properties": {
		"activities": [
			{
				"name": "Copy BlobStorage",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "DS_ktt01_Dev_Input",
						"type": "DatasetReference",
						"parameters": {
							"DS_Input_Parm": {
								"value": "@pipeline().parameters.pl_filename",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "DS_ktt01_Dev_Output",
						"type": "DatasetReference",
						"parameters": {
							"DS_Output_Parm": {
								"value": "@pipeline().parameters.pl_filename",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"pl_filename": {
				"type": "string"
			}
		},
		"variables": {
			"pl_var": {
				"type": "String"
			}
		},
		"annotations": [],
		"lastPublishTime": "2021-08-12T23:33:37Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}